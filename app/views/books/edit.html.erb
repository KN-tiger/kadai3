<h1>Editing Book</h1>

<%= render 'layouts/error', object: @book %>

<%= form_with model: @book do |f| %>

  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Update Book' %>

<% end %>

<%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>

