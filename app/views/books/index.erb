<h1>Books</h1>

<table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>

        <tr>
          <th>
            <%= image_tag book.user.profile_image %><br>
          </th>
          <th>
            <%= link_to book_path(book.id) do%>
             <%= book.title %>
            <% end %>
          </th>
          <th><p><%= book.body %></p></th>

        </tr>

      <% end %>
    </tbody>
</table>
