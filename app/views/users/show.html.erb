<h2>User info</h2>

<%= image_tag @user.get_profile_image(100,100) %>

    <table class="table">
      <tbody>
        <tr>
          <th><p><strong>name</strong></p></th>
          <th><p><%= @user.name%></p></th>
        </tr>

        <tr>
          <th><p><strong>introduction</strong></p></th>
          <th><p><%= @user.introduction%></p></th>
        </tr>
      </tbody>
    </table>


<h2>New book</h2>

<h2>Books</h2>

<table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>

        <tr>
          <th><p>Title：<%= book.title %></p></th>
          <th><p>Opinion：<%= book.body %></p></th>
        </tr>

      <% end %>
    </tbody>
</table>



