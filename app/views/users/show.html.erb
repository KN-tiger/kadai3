<h2>User info</h2>

<%= image_tag @user.get_profile_image(100,100) %>

    <table class="table">
      <tbody>
        <tr>
          <th><p><strong>name</strong></p></th>
          <th><p><%= @user.name%></p></th>
        </tr>

        <tr>
          <th><p><strong>introduction</strong></p></th>
          <th><p><%= @user.introduction%></p></th>
        </tr>
      </tbody>
    </table>
  <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>


<h2>New book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    <p>Opinion</p>
    <%= f.text_area :body %><br>

    <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>

<table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>

        <tr>
          <th>
            <%= image_tag @user.get_profile_image(100,100) %><br>
          </th>
          <th>
            <%= link_to book_path(book.id) do%>
             <%= book.title %>
            <% end %>
          </th>
          <th><p><%= book.body %></p></th>

        </tr>

      <% end %>
    </tbody>
</table>



